.loading-cover{
  position:fixed;
  top:0;left:0;z-index:999;
  width:100%;height:100%;
  /* background-color:rgba(255,255,255,0.4); */
  background-color:transparent;
}
.loading-icon{
  width:100rpx;
  height:100rpx;
  position:absolute;
  top:0;bottom:200rpx;left:0;right:0;
  margin:auto;
}
.loading-icon{
  color:#cf2122;
  padding:16rpx 25rpx;
  font-size:26rpx;
  text-align: center;
  z-index:999;
  overflow:unset !important;
}
.loading-icon text{
  position:relative;
  z-index:999;
}
.line{
  position:absolute;
  top:0;left:0;width:100%;height:100%;
  border:3px solid #cf2122;
  background-color:#fff;
  animation:mymove 1s infinite;
	-webkit-animation:mymove 1s infinite; 
}
@-webkit-keyframes mymove
{
	to {transform:rotate(360deg);}
}
@keyframes mymove
{
	to {transform:rotate(360deg);}
}