page{
  height:100%;
}
.page-invite{
  height:100%;
}
.invite-bg{
  width:100%;
  height:100%;
}
.qrcode-box{
  width:300rpx;
  position:absolute;
  top:33%;left:0;right:0;
  margin:0 auto;
}
.qrcode-bg{
  width:100%;height:100%;
}
.qrcode-img{
  position:absolute;
  top:65rpx;
  left:0;
  width:calc(100% - 40rpx);
  margin:20rpx;
  height:260rpx;
  padding:20rpx;
  background-color:#fff;
}

.invite-btn{
  position:fixed;
  left:0;right:0;
  bottom:60rpx;
  background-color:#333;
  color:#fff;
  max-width:90%;
  text-align:center;
  margin:0 auto;
  height:80rpx;
  line-height:76rpx;
  border-radius:10rpx;
}