} */
.product-num{
  color:#979797;
  font-size:16px;
  position:absolute;
  top:45px;
  right:0;
}


.cart-is-empty{
  margin:50px auto;
  line-height:50px;
  text-align:center;
  color:#888;
  font-size:16px;
}
.empty-img{
  display:block;
  margin:100px auto 50px;
}
.null-img{
  width:180px;
  height:239px;
  position:absolute;
  top:0;bottom:0;left:0;right:0;
  margin:auto;
}
.reduce-btn.disabled{
  border-color:#eee;
  color:#ccc;
}

.price_1{
  color:#999;
  margin-right:10px;
  font-size:11px;
  line-height:15px;
}
.price_1:nth-child(2){
  margin-right:0;
}
.price_1 text{
  font-size:15px;
}
.price{
  margin-right:15px;
}
.member_price{
  color:#cf2122;
}
.zhanwei{
  display:inline-block;
  width:10.5px;
  height:14px;
}
.null-cart{
  width:100px;
  height:100px;
}