.coupons-nav{
  position:fixed;
  top:0;left:0;
  z-index:100;
  background-color:#fff;
  width:100%;height:80rpx;
  text-align:center;
  font-size:30rpx;
  color:#999;
}
.coupon-nav{
  width:calc(100% / 3);
}
.coupon-nav text{
  display:inline-block;
  line-height:80rpx;
}
.coupon-nav.active text{
  color:#ce2121;
  border-bottom:4rpx solid #ce2121;
  line-height:76rpx;
}

.coupons-items{
  margin-top:110rpx;
}
.coupon-item{
  width:640rpx;
  margin:0 auto;
  margin-bottom:30rpx;
  height:190rpx;
  position:relative;
  color:#999;
}
.canuse{
  color:#db4b4b;
}
.coupon-img{
  width:100%;height:100%;
}
.coupon-money{
  position:absolute;
  top:78rpx;left:6rpx;
}
.money-sign{
  font-size:36rpx;
  line-height:36rpx;
  margin-left:20rpx;
}
.money-num{
  font-size:70rpx;
  line-height:70rpx;
}
.coupon-detail{
  position:absolute;
  top:44rpx;left:240rpx;
  width:380rpx;
  text-align:center;
}
.coupon-txt{
  font-size:34rpx;
}
.coupon-time{
  margin-top:30rpx;
  font-size:20rpx;
}

.null-coupons{
  text-align:center;
  height:400rpx;
  line-height:400rpx;
  font-size:30rpx;
  color:#999;
}