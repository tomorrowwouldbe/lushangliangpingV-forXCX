page{
  color:#666;
}
.mine-header{
  height:280rpx;
  background-color:#222431;
  color:#fff;
  padding:36rpx 0;
}
.vip-icon{
  width:40rpx;
  margin-top:6rpx;
  margin-left:10rpx;
}
.mine-img{
  width:120rpx;
  height:120rpx;
  border:6rpx solid #fff;
  border-radius:50%;
}
.mine-name{font-size:30rpx;}
.mine-tel{font-size:22rpx;}
.mine-nav{
  background-color:#fff;
  margin-bottom:20rpx;
  line-height:34rpx;
  padding:20rpx 0;
  font-size:24rpx;
}
.nav-item{
  width:25%;
}
.nav-item>view:nth-child(1){
  font-size:28rpx;
  line-height:46rpx;
}
.mine-orders{
  background-color:#fff;
  margin-bottom:20rpx;
}
.orders-header{
  line-height:98rpx;
  padding:0 20rpx;
  border-bottom:2rpx solid #e5e5e5;
}
.header-txt{
  font-size:28rpx;
}
.header-all{
  color:#999;
  font-size:24rpx;
}
.arrow-right{
  width:48rpx;
  height:48rpx;
}
.orders-body{
  padding:20rpx 0;
}
.orders-item{
  width:25%;
  font-size:24rpx;
  line-height:30rpx;
}
.order-icon{
  width:40rpx;
  height:40rpx;
  margin-bottom:10rpx;
}
.mine-items{
  background-color:#fff;
  line-height:98rpx;
  padding:0 20rpx;
  font-size:28rpx;
  margin-bottom:20rpx;
}
.mine-item{
  border-bottom:2rpx solid #e5e5e5;
}
.mine-items navigator:last-child .mine-item{
  border-bottom:0;
}
.mine-item .arrow-right{
  margin-top:26rpx;
}
.item-right{
  color:#cf2122;
}
.order-icon-box{
  position:relative;
}
.order-num{
  position:absolute;
  top:-8rpx;right:-20rpx;
  display:inline-block;
  width:30rpx;
  height:30rpx;
  text-align:center;
  line-height:26rpx;
  border-radius:50%;
  color:#fff;
  font-size:18rpx;
  background-color:#cf2122;
  border:2rpx solid #fff;
}
.icon-plus{
  position:absolute;
  top:-12rpx;
  right:-26rpx;
  display:block;
  width:40rpx;
  height:40rpx;
  color:#cf2122;
  font-size:24rpx;
}