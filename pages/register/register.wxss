page{
  padding:100rpx 40rpx 0;
  background-color:#fff;
}
.logo{
  width:300rpx;
  margin-bottom:100rpx;
}

.register-column{
  width:100%;
}
.register-line{
  border-bottom:2rpx solid #e5e5e5;
  padding:20rpx 0;
}

.register-input{
  width:80%;
  height:80rpx;
  line-height:80rpx;
  font-size:32rpx;
}
.get_btn{
  color:#cf2122;
  font-size:24rpx;
  width:20%;
  line-height:80rpx;
  text-align:right;
}


.coupons-items{
  margin-top:60rpx;
}
.coupon-item{
  width:640rpx;
  margin:0 auto;
  margin-bottom:30rpx;
  height:190rpx;
  position:relative;
  color:#999;
}
.canuse{
  color:#db4b4b;
}
.coupon-img{
  width:100%;height:100%;
}
.coupon-money{
  position:absolute;
  top:78rpx;left:6rpx;
}
.money-sign{
  font-size:36rpx;
  line-height:36rpx;
  margin-left:20rpx;
}
.money-num{
  font-size:70rpx;
  line-height:70rpx;
}
.coupon-detail{
  position:absolute;
  top:44rpx;left:240rpx;
  width:380rpx;
  text-align:center;
}
.coupon-txt{
  font-size:32rpx;
}
.coupon-time{
  margin-top:30rpx;
  font-size:20rpx;
}

.login_btn{
  font-size:30rpx;
  color:#fff;
  background-color:#db4b4b;
  width:80%;
  margin:60rpx auto;
  height:80rpx;
  line-height:80rpx;
}