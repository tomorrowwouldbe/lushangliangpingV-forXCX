/* cate */
.cate-banner{
  width:100%;
  margin-bottom:10px;
}
.banner-image{
  width:100%;
  height:140px;
}
.cate-left-list{
  background-color:#fff;
  width:180rpx;
  border-right:2rpx solid #efefef;
}
.left-item{
  line-height:98rpx;
}
.left-item-txt{
  padding:0 20rpx;
  color:#333;
  border-bottom:2rpx solid #efefef;
}
.left-subitem{
  padding-left:20rpx;
  color:#999;
  line-height:80rpx;
}
.left-subitem.active{
  color:#cf2122;
}
.left-item .left-subitem:last-child{
  border-bottom:2rpx solid #efefef;
  line-height:78rpx;
}
.subitem-sign{
  display:inline-block;
  width:10rpx;
  margin:0 10rpx;
  height:10rpx;
  background-color:#cf2122;
  position:relative;
  top:-6rpx;
  opacity:0;
  border-radius:50%;
}
.left-item.active  .left-item-txt{
  color:#cf2122;
  border-right:4rpx solid #cf2122;
}
.left-subitem.active  .subitem-sign{
  opacity:1;
}
.left-item.active .left-subitem.active{
  color:#cf2122;
}
.cate-right-list{
  background-color:#fff;
  width:calc(100% - 180rpx);
}
.right-item-header{
  text-align:center;
  height:50px;
  line-height:49px;
  font-size:26rpx;
  color:#999;
  position:relative;
}
.right-item-header text{
  background-color:#fff;
  padding:0 10px;
  position:relative;
  z-index:2;
}
.header-line{
  position:absolute;
  top:0;bottom:0px;left:0;right:0;width:40%;height:2rpx;
  background-color:#999;
  margin:auto;
}
.right-item-heder{
  width:150rpx;
  margin:0 auto;
  text-align:center;
  height:50px;
  line-height:49px;
  font-size:26rpx;
  color:#999;
  position:relative;
}
.right-item-heder:before,.right-item-heder:after{
  content:'';
  position:absolute;
  top:48%;
  width:36rpx;
  height:2rpx;
  background-color:#999;
}
.right-item-heder:before{
  left:-40rpx;
}
.right-item-heder:after{
  right:-40rpx;
}
.right-product{
  float:left;
  width:254rpx;
  border:2rpx solid #ebebeb;
  margin-bottom:10px;
}
.right-product:nth-child(2n){
  margin-left:calc((100% - 508rpx)/6);
  margin-right:calc((100% - 508rpx)/3);
}
.right-product:nth-child(2n+1){
  margin-left:calc((100% - 508rpx)/3);
  margin-right:calc((100% - 508rpx)/6);
}
.product-img{
  width:100%;
  height:214rpx;
  /* background-color:#f9f9f9; */
  background-color:#fff;
}
.product-name{
  padding:0 16rpx;
  color:#666;
  font-size:24rpx;
  height:50rpx;
  line-height:50rpx;
  background-color:#ededed;
}
.line{
  padding:0 16rpx;
}
.line_1{
  color:#666;
  font-size:20rpx;
  height:28rpx;
  line-height:28rpx;
  margin-top:18rpx;
  margin-bottom:10rpx;
}
.line_1 text{
  font-size:26rpx;
}
.line_2{
  color:#cf2122;
  font-size:20rpx;
  height:26rpx;
  line-height:26rpx;  
}
.line_2 text{
  font-size:28rpx;
}
.line_3{
  text-align:right;
  font-size:18rpx;
  color:#666;
  height:24rpx;
  line-height:24rpx;
  margin-top:18rpx;
  margin-bottom:16rpx;
}
.line_3 view{
  display:inline-block;
  /* width:128rpx; */
  text-align:center;
  height:28rpx;
  line-height: 28rpx;
  border-radius:4rpx;
  background-color:#d94d4e;
  color:#fff;
  padding:0 8rpx;
}
.line_3 text{
  font-size:26rpx;
}

.backToIndex{
  position:fixed;
  right:40rpx;top:40rpx;
  z-index:100;
  background-color:rgba(0,0,0,0.5);
  padding:10px;
  border-radius:50%;
}
.home-icon{
  width:40rpx;height:36rpx;
}

