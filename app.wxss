/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

image{
  vertical-align: top;
  width:unset;
  height:unset;
}
navigator:active,navigator:hover{
  background:transparent;
}

page{
  background-color:#F0F0F0; 
  font-size:28rpx;
}
view,page,text,image,input,scroll-view,block{
  -webkit-box-sizing:border-box;
  -moz-box-sizing:border-box;
  -ms-box-sizing:border-box;
  -o-box-sizing:border-box;
  box-sizing:border-box;
  -webkit-text-size-adjust: none;
}
swiper{
  width:100%;
  height:175px;
}

.wx-swiper-dot{
  background-color:rgba(255,255,255,0.4) !important;
}
.wx-swiper-dot.wx-swiper-dot-active{
   background-color:#cf2122 !important;
}

.slide-image{
  width:100%;
  height:100%; 
}
.flex-column{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.flex-row{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.clearfix:after{
  display:table;
  clear:both;
  content:'';
}
.lt{
  float:left;
}
.rt{
  float:right;
}
.text-overflow{
  text-overflow: ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.line-2{
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  overflow:hidden;
}
::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.inline-block{
  display:inline-block;
}
.block{
  display:block;
}

[class^=btn]:active,[class$=btn]:active{
  opacity:.5;
}
.full{
  display:inline-block;
  width:100%;height:100%;
}

.fixed-right-box{
  position:fixed;
  right:20px;bottom:25px;
  width:38px;
}
.shop-cart-num{
  position:absolute;
  top:8px;
  right:3px;
  font-size:10px;
  color:#fff;
  width:15px;
  text-align:center;
  height:12px;
  line-height:12px;
  z-index:1000;
}


.unregisted{
  width:100%;
  height:524rpx;
  position:fixed;
  top:0;bottom:0;left:0;right:0;
  margin:auto;
}
.unregisted-notice{
  margin:40rpx auto 60rpx;
  font-size:28rpx;
  text-align:center;
  color:#999;
}
.btn-register{
  width:400rpx;
  height:78rpx;
  line-height:78rpx;
  margin:25px auto;
  background-color:#d94d4e;
  color:#fff;
}


.no_sale{
  position:fixed;
  top:0;left:0;
  width:100%;height:100%;
  z-index:10000;
  background-color:rgba(0,0,0,0.4);
  color:#fff;
  text-align:center;
  font-size:36rpx;
  line-height:80rpx;
}
.no_sale_sub{
  position:absolute;
  top:0;bottom:0;left:0;right:0;
  width:477rpx;
  height:500rpx;
  margin:auto;
}
.icon-no{
  width:477rpx;height:437rpx;
}

.price-icon{
  font-size:20rpx;
}


